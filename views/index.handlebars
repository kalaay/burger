<h1>Burgers!</h1>

<h2>Burgers that are not devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> views/layouts/main devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers to be Devoured</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> views/layouts/main devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> devoured!<br>
        <input type="radio" name="devoured" value="0"> Not Devoured!
    </div>

    <button type="submit">Add Burger</button>
</form>